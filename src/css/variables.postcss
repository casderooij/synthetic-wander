:root {
  --clr-bg: #dfe0e2;
  --clr-text: #303030;
  --clr-highlight: #ff5e5e;

  --clr-info-bg: #1f1f1f;
  --clr-info-text: #d8d8d8;

  --body-padding: 1.2rem;

  --font-size-s: 1rem;
  --font-size-l: 2rem;
}

@custom-media --mobile-landscape (min-width: 640px);
@custom-media --tablet-portrait (min-width: 768px);
@custom-media --tablet-landscape (min-width: 1024px);
@custom-media --laptop (min-width: 1280px);
